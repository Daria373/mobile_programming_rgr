<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/primary_variant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/poster_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:contentDescription="Обкладинка книги"
            android:background="@android:color/white"
            android:elevation="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Додати до списку бажаного"
            android:elevation="8dp"
            app:srcCompat="@drawable/ic_heart_empty"
            app:tint="@color/white"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="@id/poster_image"
            app:layout_constraintTop_toTopOf="@id/poster_image"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" />

    
        <View
            android:id="@+id/favorite_background"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/black"
            android:alpha="0.5"
            android:elevation="7dp"
            app:layout_constraintEnd_toEndOf="@id/poster_image"
            app:layout_constraintTop_toTopOf="@id/poster_image"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/on_background"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/poster_image"
            app:layout_constraintStart_toEndOf="@id/poster_image"
            app:layout_constraintEnd_toEndOf="parent" />

  
        <TextView
            android:id="@+id/authors_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="15sp"
            android:textColor="@color/on_background"
            android:alpha="0.85"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            app:layout_constraintStart_toEndOf="@id/poster_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="4.8 ★"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            app:layout_constraintTop_toBottomOf="@id/authors_text"
            app:layout_constraintStart_toEndOf="@id/poster_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>