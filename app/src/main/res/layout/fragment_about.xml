<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="80dp"  
    android:clipToPadding="false">  

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

  
        <TextView
            android:id="@+id/about_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Про додаток"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/on_background"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Іконка додатка -->
        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher_round"
            android:contentDescription="Логотип додатка"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/about_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/app_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="«Моя Бібліотека» — сучасний мобільний додаток для любителів книг.\n\nДозволяє переглядати популярні та нові книги з усього світу, додавати їх до списку «Хочу прочитати», читати описи, дивитися обкладинки та дізнаватися про авторів."
            android:textSize="17sp"
            android:textColor="@color/on_background"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/app_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tech_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:lineSpacingMultiplier="1.4"
            android:text="Технології та джерела даних:\n• Google Books API\n• Room Database (локальне кешування)\n• Retrofit + Gson\n• MVVM архітектура\n• Material Design 3"
            android:textColor="@color/on_background"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_description" />

        <TextView
            android:id="@+id/version_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Версія: 1.0\nРозробник: Цуркан Дар'я\nГрупа: КІ-221\n2025 рік"
            android:textSize="15sp"
            android:textColor="@color/on_background"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/tech_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>